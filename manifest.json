{
  "manifest_version": 2,
  "name": "Tweet iguana",
  "version": "1.0",

  "description": "Adds a button to download attachments from tweets",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
    "scripts": ["/src/downloadsController.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://pbs.twimg.com/*"],
      "js": ["/dist/main.js"]
    }
  ],

  "permissions": [
    "webNavigation",
    "*://*.twitter.com/*",
    "*://pbs.twimg.com/*",
    "downloads",
    "background",
    "notifications"
  ]
}
